{
  "name": "electron_test",
  "version": "1.0.0",
  "main": "./electron/main.js",
  "scripts": {
    "dev:server": "node server/api.js",
    "dev:client": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:electron\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "author": "",
  "license": "ISC",
  "description": "一磅通称重管理系统 - 专业的车辆称重和进销存管理软件",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.15.15",
    "antd": "^5.25.4",
    "axios": "^1.10.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mysql2": "^3.14.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "recharts": "^3.1.2",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/antd": "^0.12.32",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^36.4.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.weight-system.app",
    "productName": "一磅通称重管理系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*",
      "server/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      },
      {
        "from": "public/printer_sdk",
        "to": "printer_sdk"
      }
    ],
    "win": {
      "target": "dir",
      "icon": "electron/logo.ico"
    }
  }
}
